---
import { SITE } from '~/utils/config';
import {getPermalink} from "../utils/permalinks";
import Image from "./common/Image.astro";
import logoImage from '../../src/assets/images/PRP_TF_Logo.svg';
---

<span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
      {
        <Image
          src={logoImage}
          alt={SITE?.name}
          width={40}
          aspectRatio="559:334"
          class="inset-0 inline mr-1"
        />
      } {SITE?.name}
</span>
